<%- include('includes/head') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 text-center my-3">
      <h1 class="display-1 text-center my-3">Área de login</h1>
      <%- include('includes/messages') %>
      <div class="row my-3">
        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <p>Se não tiver conta, crie aqui o seu cadastro.</p>
          <form class="formRegistro" action="/login/register" method="POST">
            <div class="form-group text-start my-3">
              <label for="exampleInputEmail1">Endereço de e-mail</label>
              <input
                type="email"
                class="form-control"
                placeholder="exemplo@meuemail.com"
                name="email"
              />
              <input type="hidden" name="_csrf" value=<%= csrfToken%>>
            </div>
            <div class="form-group my-3">
              <label for="exampleInputPassword1">Password</label>
              <input
                type="password"
                class="form-control"
                id="exampleInputPassword1"
                name="password"
                placeholder="Password"
              />
            </div>
            <button type="submit" class="btn btn-primary">Registrar</button>
          </form>
        </div>
        <div class="col-lg">
          <h4>Faça seu login</h4>
          <p>Bem-vindo de volta </p>
          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken%> >
            <div class="form-group text-start my-3">
              <label for="exampleInputEmail1">Endereço de e-mail</label>
              <input
                type="email"
                class="form-control"
                placeholder="exemplo@meuemail.com"
                name="email"
              />
            </div>
            <div class="form-group my-3">
              <label for="exampleInputPassword1">Password</label>
              <input
                type="password"
                class="form-control"
                id="exampleInputPassword1"
                name="password"
                placeholder="Password"
              />
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer') %>