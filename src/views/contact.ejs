<%- include('includes/head') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="display-1 text-center my-3">Contatos</h1>
      <p class="text-center lead">Adicione ou edite seu contato abaixo</p>
      <%- include('includes/messages') %>
      <div class="row my-3">
        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <p>Se não tiver conta, crie aqui o seu cadastro.</p>
          <form action="/contato/register" method="POST">
            <div class="form-group text-start my-3">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <label for="name">Nome</label>
              <input type="text" value='<%= contato.nome %>' class="form-control" name="nome" />
              <label for="email">Email</label>
              <input type="text" value='<%= contato.email %>' class="form-control" name="email" />
              <label for="tel">Telefone</label>
              <input type="tel" value='<%= contato.tel %>' class="form-control" name="tel" />
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer') %>
