<%- include('includes/head') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="display-1 text-center my-3">Agenda</h1>
      <p class="text-center lead">Seus contatos</p>
      <div class="responsive-table">
        <table class="table my-3 text-start">
          <tr>
            <td>Nome</td>
            <td>Telefone</td>
            <td>Email</td>
          </tr>
          <% contatos.forEach( contato => { %>
          <tr>
            <td><%= contato.nome %></td>
            <td><%= contato.tel %></td>
            <td><%= contato.email %></td>
            <td>
              <a href="/contato/<%=contato._id%>">Editar</a>
            </td>
            <td>
              <a href="/contato/delete/<%contato._id%>" style="color: red;">Apagar</a>
            </td>
          </tr>
          <% }) %>
        </table>
      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/messages') %>
<%- include('includes/footer') %>
